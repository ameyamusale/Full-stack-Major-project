<% layout("/layouts/boilerplate")%>
    
    <div class="row">

        <div class="col-8 offset-2">
            <h3>Create a new Listing</h3>
            <form action="/listings" method="POST" class="needs-validation" novalidate>
    
                <div class="mb-3">
                    <label for="title" class="form-input">Title</label>
                    <input type="text" name="listing[title]" id="title" class="form-control" placeholder="Enter a Catchy Title" required>
                </div>
    
                <div class="mb-3">
                    <label for="description" class="form-input">Description</label>
                    <textarea name="listing[description]" id="description" class="form-control" rows="3" placeholder="Write something about the Place" required></textarea>
                </div>
    
                <div class="mb-3">
                    <label for="image" class="form-label">Image URL</label>
                    <input type="text" name="listing[image]" id="image" class="form-control" placeholder="Enter Image Url/Link">
                </div>
            <div class="row">
                <div class="md-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listing[price]" id="price" class="form-control" placeholder="1200" required>
                </div>
    
                <div class="md-3 col-md-8">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" id="location" class="form-control" placeholder="Jaipur,Rajasthan" required>
                </div>
            </div>    
    
                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" id="country" class="form-control" placeholder="India" required>
                </div>
    
    
                <button class="btn btn-dark" type="submit">ADD LISTING</button>
            </form>
        </div>
    </div>