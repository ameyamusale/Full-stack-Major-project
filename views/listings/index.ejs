<% layout("/layouts/boilerplate")%>
<body>
        <h3>All Listings</h3>
      <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
          <% for (let listing of allListings) { %>
            <a href="/listings/<%=listing._id %>" class="listing-lists">
                  <div class="card col">
                      <img src="<%= typeof listing.image ==='string' ? listing.image: listing.image.url %>"
                          class="card-img-top" alt="listing_image" />
                                <div class="card-img-overlay">Click To View More</div>
                      <div class="card-body">
                          <p class="card-text">
                             <div class="one">   <%= listing.title %> <br/>  </div>
                                 <%= listing.price.toLocaleString("en-IN") %>  /night
                          </p>
                      </div>
                  </div>
            </a>      
          <% } %>
      </div>
</body>