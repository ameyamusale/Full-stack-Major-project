<% layout("/layouts/boilerplate")%>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">
        <h3>Listing Details</h3>
    </div>

      <div class="card col-6 offset-3">
        <img
        src="<%= listing.image.url %>"
        class="card-img-top show-img"
        alt="listing_image"
        >
        
        <div class="card-body">
        </div>
         <p class="card-text">
                                <ul>
                                    <b><li><strong>Description:</strong><%= listing.title %></li></b>
                                    <li><strong>Description:</strong><%= listing.description %></li>
                                    <li><strong>Price:</strong>  &#8377; <%= listing.price.toLocaleString("en-IN") %></li>
                                    <li><strong>Location:</strong><%= listing.location %> </li>
                                    <li><strong>Country:</strong><%= listing.country %></li>
                                </ul>
            </p>               
      </div> 
      
      
      <div class="btns offset-3">
            <a href="/listings/<%=listing._id %>/edit" class="btn btn-dark btn-sm px-3">Edit </a>
               <form action="/listings/<%=listing._id%>?_method=DELETE" method="POST" class="col-lg-1 col-md-2 col-sm-3 col-4">
                  <button class="del btn">Delete</button>
               </form>
      </div>  
  
      
  
  </div>
</body>

